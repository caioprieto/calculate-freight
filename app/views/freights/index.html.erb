<div class="container mt-5 fixed-container">
  <div class="card shadow p-5 fixed-card">
    <%= render partial: 'header_fields' %>

    <% if @frete_calculado.present? %>
      <div class="alert alert-warning d-flex justify-content-between align-items-center mt-5 col-6">
        <img src="<%= @frete_calculado["company"]["picture"] %>" alt="Logo da transportadora" class="img-fluid" style="max-height: 50px; margin-left: 40px;"><br>

        <p class="mt-3" style="margin-right: 120px;">
          <strong>Serviço:</strong> <%= @frete_calculado["name"] %><br>
          <strong>Transportadora:</strong> <%= @frete_calculado["company"]["name"] %><br>
          <strong>Preço Final:</strong> <%= number_to_currency(@frete_calculado["custom_price"].to_f, unit: "R$") %><br>
          <strong>Prazo de Entrega:</strong> <%= @frete_calculado["delivery_time"] %> dias
        </p>
      </div>
    <% end %>
  </div>
</div>

<style>
.fixed-container {
  max-width: 1500px; /* Define uma largura máxima */
}

.fixed-card {
  width: 100%; /* Ocupa toda a largura do container */
  min-height: 850px; /* Define uma altura mínima */
  max-height: 850px; /* Define uma altura máxima */
}

.text-custom {
  font-size: 20px;
}
</style>
