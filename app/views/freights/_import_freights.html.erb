<%= form_with(url: importar_fretes_path, method: :post, local: true, multipart: true) do |form| %>
  <div class="d-flex justify-content-between align-items-center mb-1">
    <h3 class="mt-2 text-title">Importação de Fretes</h3>
    <div class="row">
      <%= form.file_field :file_pdf, required: true %>
    </div>
    <button type="submit" class="btn btn-success btn-lg">
      <i class="bi bi-upload"></i> Enviar
    </button>
  </div>
<% end %>
