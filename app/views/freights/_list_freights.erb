<div class="d-flex justify-content-between align-items-center mb-1">
  <h3 class="mt-2 text-title">FRETES</h3>
</div>

<% if @freights.present? %>
  <table class="table table-bordered mt-3">
    <thead class="thead-dark">
      <tr class="table-secondary">
        <th>Serviço</th>
        <th>Companhia</th>
        <th>Origem</th>
        <th>Destino</th>
        <th>Prazo</th>
        <th>Preço</th>
        <th class="text-right">Data da requisição</th>
      </tr>
    </thead>
    <% @freights.each do |frete| %>
      <tbody>
        <tr>
          <td><%= frete.nome_do_serviço %></td>
          <td><%= frete.compania %></td>
          <td><%= frete.address_origem_cidade %> - <%= frete.address_origem_estado %></td>
          <td><%= frete.address_destino_cidade %> - <%= frete.address_destino_estado %></td>
          <td><%= frete.tempo_estimado ? "#{frete.tempo_estimado} Dias" : " - " %></td>
          <td><%= frete.preço_final ? "R$ #{frete.preço_final}".gsub('.', ',') : " - "  %></td>
          <td><%= frete.created_at.in_time_zone('America/Sao_Paulo').strftime('%d/%m/%Y %H:%M:%S') %></td>
        </tr>
      </tbody>
    <% end %>
  </table>
<% else %>
  <p class="text-center">Nenhum frete disponível.</p>
<% end %>
