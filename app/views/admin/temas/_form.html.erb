<%= form_with(model: [:admin, @tema], local: true, html: { class: "curso-form" }) do |form| %>
  <%= form.button type: "submit", class: "btn btn-success px-3 py-2", style: "border-radius: 3px; margin-top: 3px;" do %>
    <i class="bi bi-check-circle-fill fs-6" style="margin-right: 2px;"></i>
    <span style="position: relative; top: -1px; font-weight: 600; font-size: 14px;">Salvar</span>
  <% end %>

  <%# Voltar %>
  <a href="/admin/temas" class="btn btn-secondary px-3 py-2" style="border-radius: 3px; margin-top: 3px;">
    <i class="bi bi-box-arrow-left fs-6" style="margin-right: 2px;"></i>
    <span style="position: relative; top: -1px; font-weight: 600; font-size: 14px;">Voltar</span>
  </a>

  <div class="row mt-3 w-100">
    <div class="w-50">
      <%= form.label "Nome", class: "form-label fw-light" %>
      <%= form.text_field :name, class: "form-control form-control-sm", style: "margin-top: -8px" %>
    </div>

    <div class="w-50">
      <%= form.label :prova, "Prova", class: "form-label fw-light" %>
      <div class="d-flex align-items-center" style="gap: 5px;">
        <%= form.select :prova, options_for_select([["Enem", "enem"], ["Fuvest", "usp"], ["Unicamp", "unicamp"]], @tema.prova), {}, class: "form-select form-select-sm select2-prova", style: "margin-top: -8px" %>
      </div>
    </div>
  </div>

  <div class="row mt-4">
    <div class="w-100 row">
      <div class="col-6">
        <% if @tema.capa.present? %>
          <%= image_tag @tema.capa, width: "100%;", height: "100%;", class: "cover" %>
        <% else %>
          <img src="/images/fundo-neutro.jpg" style="object-fit: cover; opacity: 50%" width="100%;" height="100%;">
        <% end %>
      </div>
      <div class="col-6">
        <% if @tema.pdf_file.attached? %>
          <iframe src="<%= rails_blob_path(@tema.pdf_file, disposition: 'inline') %>" type="application/pdf" class="mb-3 w-100" width="100%;" height="100%;"></iframe>
        <% else %>
          <img src="/images/fundo-neutro.jpg" style="object-fit: cover; opacity: 20%" width="100%;">
        <% end %>
      </div>
    </div>
  </div>

  <div class="row mt-2 w-100">
    <div class="w-50">
      <%= form.label "Capa do tema", class: "form-label fw-light", for: "formFile" %><br>
      <%= form.file_field :capa, style: "margin-top: -8px", class: "form-control form-control-sm", id: "formFile" %>
    </div>

    <div class="w-50">
      <%= form.label "PDF", class: "form-label fw-light", for: "formFile" %><br>
      <%= form.file_field :pdf_file, style: "margin-top: -8px", class: "form-control form-control-sm", id: "formFile" %>
    </div>
  </div>
<% end %>