<h6 style="margin-top: 2px; display: flex;">
  <i class="bi bi-book fs-5" style="margin-right: 13px; margin-top: -2px;"></i>
  Redações
</h6>

<a href="/admin/words/new" class="btn btn-success px-3 py-2" style="margin-top: 6px; border-radius: 3px">
  <i class="bi bi-plus-circle-fill fs-6" style="margin-right: 3px"></i>
  <span style="margin-top: -10px; position: relative; top: -1px; font-weight: 600; font-size: 14px;">Criar tema</span>
</a>

<table class="table table-admin table-sm table-bordered mt-3" style="width: 99%;">
  <thead>
    <tr>
      <th scope="col">Tema</th>
      <th scope="col">Tipo da Prova</th>
      <th scope="col">Data de criação</th>
      <th scope="col">Imagem</th>
      <th scope="col">PDF</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% @redacoes.each do |redacao| %>
      <tr>
        <td><%= redacao.tema %></td>
        <td><%= redacao.word_type.upcase %></td>
        <td><%= redacao.created_at.in_time_zone('America/Sao_Paulo').strftime('%d/%m/%Y %H:%M:%S') %></td>
        <td>
          <% if redacao.imagem.attached? %>
            <i class='bi bi-check-circle-fill text-success fs-5 d-flex hover' style="margin-left: 10px; margin-top: 5px;"></i>
          <% else %>
            <i class="bi bi-x-circle-fill text-danger fs-5 d-flex hover" style="margin-left: 10px; margin-top: 5px;"></i>
          <% end %>
        </td>
        <td>
          <% if redacao.pdf_file.attached? %>
            <i class='bi bi-check-circle-fill text-success fs-5 d-flex hover' style="margin-left: 3px; margin-top: 5px;"></i>
          <% else %>
            <i class="bi bi-x-circle-fill text-danger fs-5 d-flex hover" style="margin-left: 3px; margin-top: 5px;"></i>
          <% end %>
        </td>
        <td>
          <%= link_to edit_admin_word_path(redacao), style: "text-decoration: none; color: black; display: flex", class: "hover" do %>
            <i class="bi bi-pencil-square text-dark fs-6" style="position: relative; left: 3px; bottom: -2px" ></i>
            <span style="text-decoration: none; font-size: 12px; margin-top: 5px; margin-left: 10px;">Editar</span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
