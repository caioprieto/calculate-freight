<%= form_with(model: [:admin, @word], local: true, html: { class: "curso-form" }) do |form| %>

  <div class="d-flex gap-2" style="margin-top: 16px;">
    <%# Voltar %>
    <a href="/admin/words" class="btn btn-secondary px-3 py-2" style="border-radius: 3px">
      <i class="bi bi-box-arrow-left fs-6 me-1"></i>
      <span style="position: relative; top: -1px; font-weight: 600; font-size: 14px;">Voltar</span>
    </a>

    <%# Salvar %>
    <%= form.button type: "submit", class: "btn btn-success btn-sm px-3 py-2", style: "border-radius: 3px" do %>
      <i class="bi bi-check-circle-fill fs-6 me-1"></i>
      <span style="position: relative; top: -1px; font-weight: 600; font-size: 14px;">Salvar</span>
    <% end %>
  </div>

  <div class="mt-3" style="width: 98.5%;">
    <%= form.label "Tema", class: "form-label" %>
    <%= form.text_field :tema, class: "form-control", class: "form-control form-control-sm", style: "margin-top: -8px" %>
  </div>

  <div class="mt-3 d-flex gap-3" style="width: 97.3%;">
    <div class="col-6">
      <%= form.label :prova, "Prova", class: "form-label" %>
      <div class="d-flex align-items-center" style="gap: 5px;">
        <%= form.select :word_type, options_for_select([["Enem", "enem"], ["Fuvest", "usp"], ["Unicamp", "unicamp"]], @word.word_type), {}, class: "form-select form-select-sm select2-prova", style: "margin-top: -8px" %>
      </div>
    </div>

    <div class="col-6">
      <%= form.label :image_type, "Tipo da imagem", class: "form-label" %>
      <div class="d-flex align-items-center" style="gap: 5px;">
        <%= form.select :image_type, options_for_select([["Cobrindo o quadrado todo", "cover"], ["Com bordas laterais", "scaledown"]], @word.image_type), {}, class: "form-select form-select-sm select2-prova", style: "margin-top: -8px" %>
      </div>
    </div>
  </div>

  <div class="row mt-3">
    <div class="row" style="width: 100%; height: 100%;">
      <div class="col-6">
        <%= form.label "Imagem", class: "form-label" %><br>
        <% if @word.imagem.present? %>
          <% if @word.word_type == "cover" %>
            <%= image_tag @word.imagem, width: "100%;", height: "100%;", class: "cover" %>
          <% else %>
            <%= image_tag @word.imagem, width: "100%;", class: "scale-down", style: "background-color: black; min-height: 100%;; max-height: 100%;" %>
          <% end %>
        <% else %>
          <img src="/images/fundo-neutro.jpg" style="object-fit: cover; opacity: 20%" width="100%;" height="100%;">
        <% end %>
        <%= form.file_field :imagem, class: "form-control form-control-sm mt-3", id: "formFile" %>
      </div>
      <div class="col-6">
        <%= form.label "PDF", class: "form-label" %><br>
        <% if @word.pdf_file.attached? %>
          <iframe src="<%= rails_blob_path(@word.pdf_file, disposition: 'inline') %>" type="application/pdf" width="100%;" height="100%;" style="margin-bottom: -8px;"></iframe>
        <% else %>
          <img src="/images/fundo-neutro.jpg" style="object-fit: cover; opacity: 20%" width="100%;" height="100%;">
        <% end %>
        <%= form.file_field :pdf_file, class: "form-control form-control-sm mt-3", id: "formFile" %>
      </div>
    </div>
  </div>
<% end %>

