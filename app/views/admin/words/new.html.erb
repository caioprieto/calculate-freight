<%= form_with(model: [:admin, @word], local: true, html: { class: "curso-form" }) do |form| %>
  <%= form.text_field :tema %>
  <%= form.file_field :pdf_file %>
  <%= form.label :word_type, "Prova", class: "form-label fw-light" %>
  <%= form.select :word_type, options_for_select([["Enem", "enem"], ["Fuvest", "usp"], ["Unicamp", "unicamp"]], @word.word_type), {}, class: "form-select form-select-sm", style: "margin-top: -8px" %>
  <%= form.submit "Salvar" %>
<% end %>


