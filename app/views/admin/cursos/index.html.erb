<h4 style="margin-top: 3px;">
  <i class="bi bi-play-btn-fill text-dark fs-4" style="margin-right: 10px"></i>
  Cursos
</h4>

<a href="/admin/cursos/new" class="btn btn-success"style="margin-top: 10px; border-radius: 30px">
  <i class="bi bi-plus-circle-fill fs-4" style="margin-right: 3px"></i>
  <span style="margin-top: -10px; position: relative; top: -4px; font-weight: 600">Criar novo curso</span>
</a>

<div class="table-admin">
  <table class="table table-bordered mt-4" style="width: 99%;">
    <thead>
      <tr>
        <th style="font-size: 17px; font-weight: 510;" scope="col">Nome do Curso</th>
        <th style="font-size: 17px; font-weight: 510;" scope="col">Descrição</th>
        <th style="font-size: 17px; font-weight: 510;" scope="col">Genêro Textual</th>
        <th style="font-size: 17px; font-weight: 510;" scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% @cursos.each do |curso| %>
        <tr>
          <td style="font-size: 15px; font-weight: 450;"><%= curso.name %></td>
          <td style="font-size: 15px; font-weight: 450;"><%= curso.description %></td>
          <td style="font-size: 15px; font-weight: 450;">Texto Dissertativo-Argumentativo</td>
          <td style="font-size: 15px; font-weight: 450;">
            <%= link_to edit_admin_curso_path(curso) do %>
              <i class="bi bi-pencil-square text-dark fs-4" style="position: relative; left: 3px; bottom: 3px" ></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
