
<h1>Configurações</h1>

<%= form_for(@user, url: user_registration_path(@user)) do |f| %>
  <%= render "devise/shared/error_messages", resource: @user %>

  <div class="field">
    <%= f.label :nome, class: "label" %><br />
    <%= f.text_field :nome, autofocus: true, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :sobrenome, class: "label" %><br />
    <%= f.text_field :sobrenome, autofocus: true, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :cpf, "CPF", class: "label" %><br />
    <%= f.text_field :cpf, class: 'cpf-field', placeholder: '000.000.000-00', class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :email, class: "label" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "Criar", class: 'mt-3' %>
  </div>

  <hr class="hr">
<% end %>