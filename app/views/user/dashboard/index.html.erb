<div class="container-right-panel">
  <nav class="row">
    <div class="col-5">
      <%= form_with url: user_dashboard_search_path, method: :get, local: true, class: "search-form" do %>
        <input
          type="text"
          name="query"
          placeholder="Qual curso está procurando?"
          class="search-input"
        />
        <button type="submit" class="search-button">
          <i class="bi bi-search fs-4" style="margin-right: 10px"></i>
        </button>
      <% end %>
    </div>
    <div class="col-4"></div>
    <div class="col-3">
      <a href="/inscricao" class="btn">
        <i class="bi bi-bell-fill fs-2 text-secondary"></i>
      </a>
      <a href="/user/dashboard" class="btn align-items-center">
        <i class="bi bi-person-workspace fs-1 text-secondary"></i>
        <span class="email-text">
          <%= current_user.email.upcase.truncate(12) %>
        </span>
      </a>
    </div>
  </nav>

  <div class="mt-3">
    <h5 href="/" style="margin-left: 10px;">
      <i class="bi bi-collection-play fs-4" style="margin-right: 10px"></i>
      Meus Cursos
    </h5>
  </div>

  <div class="carousel-section mt-4">
    <div class="carousel-wrapper position-relative">
      <button class="carousel-btn prev">&#10094;</button>
      <div class="carousel-container">
        <div class="carousel-track">
          <% 12.times do |i| %>
            <div class="curso-card">
              <div class="curso-content">
                  <div class="curso-img" style="position: relative;">
                    <img src="/images/livros.png" alt="Curso <%= i + 1 %>">
                      <%= link_to freights_path, class: 'play-button' do %>
                        <i class="bi bi-play-fill text-white"></i>
                      <% end %>
                  </div>
                <div class="curso-texto" style="margin-top: -30px;">
                  <h6>Extensivo ENEM</h6>
                  <p>Aprenda como conquistar a nota 1000 com técnicas de redação.</p>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
      <button class="carousel-btn next">&#10095;</button>
    </div>
  </div>

  <br><br><br><br><br><br><br><br><br><br><br><br>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const track = document.querySelector('.carousel-track');
    const container = document.querySelector('.carousel-container');
    const cards = document.querySelectorAll('.curso-card');

    let position = 0;
    const cardWidth = cards[0].offsetWidth + 40; // 20 = gap/margin

    // Adiciona evento a todos os botões "next"
    document.querySelectorAll('.carousel-btn.next').forEach(btn => {
      btn.addEventListener('click', () => {
        const maxScroll = track.scrollWidth - container.offsetWidth;
        if (position + cardWidth < maxScroll) {
          position += cardWidth;
        } else {
          position = maxScroll; // garante que vá até o limite, mas sem ultrapassar
        }
        track.style.transform = `translateX(-${position}px)`;
      });
    });

    // Adiciona evento a todos os botões "prev"
    document.querySelectorAll('.carousel-btn.prev').forEach(btn => {
      btn.addEventListener('click', () => {
        if (position > 0) {
          position -= cardWidth;
          track.style.transform = `translateX(-${position}px)`;
        }
      });
    });
  });
</script>
