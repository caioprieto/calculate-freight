<div class="mt-3" style="margin-left: 20px">
  <h5 href="/">
    <i class="bi bi-book fs-4" style="margin-right: 10px"></i>
    <span style="position: relative; top: -2px;">Minhas Redações</span>
  </h5>
</div>

<div class="full-width-container d-flex flex-wrap mt-3" style="gap: 15px; width: 96%; margin-left: 17px;">
  <% @redacoes.each do |word| %>
    <div class="d-flex flex-column align-items-center" style="flex: 1 1 22%; max-width: 22%; min-width: 200px;">
      <a href="/user/words/<%= word.id %>/proposta" class="meus-cursos-card bg-white d-flex flex-column align-items-center text-dark" style="width: 100%; text-decoration: none;">
        <div class="meus-cursos-img position-relative" style="width: 100%;">
          <img src="/images/enem.jpg">

          <div class="position-absolute top-50 start-50 translate-middle d-flex justify-content-center align-items-center rounded-circle bg-dark" style="width: 50px; height: 50px;">
            <i class="bi bi-pencil-square text-white fs-4" style="margin-right: 1px"></i>
          </div>
        </div>
        <div class="w-100" style="padding: 0 20px;">
          <h6 class="text-dark mt-2 mb-2"><%= word.tema %></h6>
        </div>
      </a>
    </div>
  <% end %>
</div>
