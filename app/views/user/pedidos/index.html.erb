<h5 class="mt-3" href="/">
  <i class="bi bi-receipt fs-4" style="margin-right: 10px; margin-left: 22px"></i>
  <span style="position: relative; top: -2px;">Meus Pedidos</span>
</h5>

<div style="flex-direction: column; gap: 15px; width: 88%; white-space: nowrap; margin-left: 22px">
  <% @pedidos.each do |pedido| %>
    <div class="carrinho-cursos-card mt-4 bg-white d-flex align-items-center">
      <div class="ms-5 w-75">
        <h1 class="fw-light text-dark p-0 m-0 ms-2"><strong>Codígo:</strong> <%= pedido.code %></h1>
        <p class="ms-2 p-0 m-0" style="font-weight: 500"><%= pedido.created_at.in_time_zone('America/Sao_Paulo').strftime('%d/%m/%Y') %></p>
        <p class="ms-2 text-secondary p-1 m-0" style="font-size: 12px"><%= pedido.cursos_count %> Cursos • Status: <strong><%= pedido.status.upcase == "FINALIZADO" ? "Finalizado" : "Pendente" %></strong> • Valor Total: </strong> <%= number_to_currency(pedido.total, unit: "R$", separator: ",", delimiter: ".", format: "%u %n") %></p>
      </div>
    </div>
  <% end %>
</div>

<br><br>