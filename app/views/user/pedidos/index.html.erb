<h5 class="mt-3" href="/">
  <i class="bi bi-receipt fs-4" style="margin-right: 10px; margin-left: 22px"></i>
  <span style="position: relative; top: -2px;">Meus Pedidos</span>
</h5>

<div class="full-width-container d-flex flex-wrap" style="display: flex; gap: 15px; width: 97%; margin-left: 19px; margin-top: 20px;">
  <% @pedidos.each do |pedido| %>
    <div class="card-white-smoke p-3 w-100 text-secondary mt-2">
      <p style="font-weight: 400"> <strong style="font-weight: 650"> Pedido:</strong> <%= pedido.code %> </p>
      <p style="font-weight: 400"> <strong style="font-weight: 650"> Data:</strong> <%= pedido.created_at.in_time_zone('America/Sao_Paulo').strftime('%d/%m/%Y') %> </p>
      <p style="font-weight: 400"> <strong style="font-weight: 650"> Quantidade de Cursos:</strong> <%= pedido.cursos_count %> </p>
      <p style="font-weight: 400"> <strong style="font-weight: 650"> Status: </strong> <%= pedido.status.upcase %> </p>
      <p style="font-weight: 400"> <strong style="font-weight: 650"> Valor Total: </strong> <%= number_to_currency(pedido.total, unit: "R$", separator: ",", delimiter: ".", format: "%u %n") %> </p>
      <p>
    </div>
  <% end %>
</div>

<br><br>