<% if params[:prova].present? %>
  <div class="container mb-5"style="margin-top: 5px;">
    <div class="mt-2 ms-4 d-flex" style="width: 93%;">
      <i class="bi bi-chevron-double-left fs-5" style="margin-top: -3px; margin-right: 6px; margin-left: 10px;"></i>
      <h2 class="ms-2" style="font-size: 18px; font-weight: 400; margin-top: 2px;">Provas anteriores <strong style="font-weight: 600; font-size: 17px;"><%= params[:prova].present? ? " - #{params[:prova].upcase}" : "" %><strong></h2>
    </div>

    <% if params[:prova] == "unicamp" %>
      <%= render partial: "welcomes/accordion/unicamp" %>
    <% end %>
    <% if params[:prova] == "usp" %>
      <%= render partial: "welcomes/accordion/usp" %>
    <% end %>
    <% if params[:prova] == "enem" %>
      <%= render partial: "welcomes/accordion/enem" %>
    <% end %>
    <% if params[:prova] == "unesp" %>
      <%= render partial: "welcomes/accordion/unesp" %>
    <% end %>
  </div>
<% end %>