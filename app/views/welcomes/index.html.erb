<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Aprova Redação</title>
  </head>
  <body>
    <nav>
      <%= render 'infinite_text' %>
      <div class="container">
        <div class="logo">
          <img src="/images/logo_preto.png" alt="Logo" style="margin-left: -25px; display: flex;">
        </div>
        <nav class="menu">
          <a href="/">Quem somos</a>
          <a href="/">Vestibulares</a>
          <a href="/">Colegial</a>
          <a href="/">Iniciante</a>
        </nav>
        <div class="navbar-buttons" style="margin-right: -15px; display: flex; gap: 10px;">
          <a href="/inscricao" class="btn btn-light text-custom-nav">Quero me inscrever</a>
          <a href="/user/dashboard" class="btn btn-dark text-custom-nav">Já sou aluno</a>
        </div>
      </div>

      <hr class="custom-hr">
    </nav>

    <div class="container">
      <div class="card-welcome text-dark">
        <div class="banner row">
          <div class="carousel-section mt-3">
            <div class="carousel-wrapper position-relative">
              <button class="carousel-btn prev">&#10094;</button>
              <div class="carousel-container">
                <div class="carousel-track">
                  <% 6.times do |i| %>
                    <a href="/cursos/1/edit">
                      <div class="curso-card">
                        <div class="curso-content">
                          <div class="curso-img">
                            <img src="/images/livros.png" alt="Curso <%= i + 1 %>">
                          </div>
                          <div class="curso-texto">
                            <h5 style="text-dark">5 LIVROS PARA AMPLIAR SEU REPERTÓRIO</h5>
                            <p class="text-dark">Aprenda como conquistar a nota 1000 com técnicas de redação.</p>
                          </div>
                        </div>
                      </div>
                    </a>
                  <% end %>
                </div>
              </div>
              <button class="carousel-btn next">&#10095;</button>
            </div>
          </div>
        </div>

        <%= render 'alunos_aprovados'%>
        </div>
      </div>
    <div>
    <footer class="footer">
      <div class="container">
        <p class="text-white mt-3">&copy; 2025 Aprova Redação. Todos os direitos reservados.</p>
      </div>
    </footer>
  </body>
</html>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const track = document.querySelector('.carousel-track');
    const container = document.querySelector('.carousel-container');
    const cards = document.querySelectorAll('.curso-card');

    let position = 0;
    const cardWidth = cards[0].offsetWidth + 40; // 20 = gap/margin

    // Adiciona evento a todos os botões "next"
    document.querySelectorAll('.carousel-btn.next').forEach(btn => {
      btn.addEventListener('click', () => {
        const maxScroll = track.scrollWidth - container.offsetWidth;
        if (position + cardWidth < maxScroll) {
          position += cardWidth;
        } else {
          position = maxScroll; // garante que vá até o limite, mas sem ultrapassar
        }
        track.style.transform = `translateX(-${position}px)`;
      });
    });

    // Adiciona evento a todos os botões "prev"
    document.querySelectorAll('.carousel-btn.prev').forEach(btn => {
      btn.addEventListener('click', () => {
        if (position > 0) {
          position -= cardWidth;
          track.style.transform = `translateX(-${position}px)`;
        }
      });
    });
  });
</script>
