<h3 class="titulo">Entre na sua conta</h3>

<div style="margin-top: 30px">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email, class: "form-label fw-light" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-sm", style: "margin-top: -6px" %>
    </div>

    <div class="field">
      <%= f.label "Senha", class: "form-label fw-light" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control form-control-sm", style: "margin-top: -6px" %>
    </div>

    <div class="d-flex justify-content-between align-items-center w-100 mb-3 mt-3 mobile-none">
      <% if devise_mapping.rememberable? %>
        <div class="boolean d-flex align-items-center">
          <label class="field toggle-switch mobile-none">
            <%= f.check_box :remember_me, { id: "remember_me", checked: true } %>
            <span class="toggle-slider mobile-none"></span>
          </label>
          <%= f.label :remember_me, "Lembrar conta", for: "remember_me", class: "remember-label mb-0 ms-2 mobile-none" %>
        </div>
      <% end %>

      <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <%= link_to "Esqueceu sua senha?", new_password_path(resource_name), class: "text-custom-password mobile-none" %>
      <% end %>
    </div>

    <div class="actions">
      <%= f.submit "Entrar", style: "margin-top: 10px", class: "ajuste-top" %>
    </div>

    <hr class="hr">
  <% end %>

  <%= render "devise/shared/links" %>
</div>

