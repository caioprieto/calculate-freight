<h3 class="titulo">Entre na sua conta</h3>

<div style="margin-top: 30px">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email, class: "label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>

    <div class="field">
      <%= f.label "Senha", class: "label" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
    </div>

    <div class="row p-2">
      <div class="col-6">
        <% if devise_mapping.rememberable? %>
          <div class="boolean">
            <label class="field toggle-switch">
              <%= f.check_box :remember_me, { id: "remember_me", checked: true } %>
              <span class="toggle-slider"></span>
            </label>
            <%= f.label :remember_me, "Lembrar conta", for: "remember_me", class: "remember-label"  %>
          </div>
        <% end %>
      </div>
      <div class="col-6">
        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'%>
          <%= link_to "Esqueceu sua senha?", new_password_path(resource_name), class: "text-custom-password" %><br />
        <% end %>
      </div>
    </div>

    <div class="actions">
      <%= f.submit "Entrar", style: "margin-top: 10px" %>
    </div>

    <hr class="hr">
  <% end %>

  <%= render "devise/shared/links" %>
</div>

